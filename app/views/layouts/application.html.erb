<!DOCTYPE html>
<html>
  <head>
    <title>FLIXXTER</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <%= link_to 'FLIXTER', root_url, class: 'navbar-brand' %>
        <div class="navbar-brand" id="navbarTogglerDemo02">
          <li class="navbar-brand mr-auto mt-2 mt-md-0">
            <%= link_to 'All Courses', courses_path, class: 'navbar-brand' %>
          </li>
          <% if user_signed_in? %>
            <li class="navbar-brand">
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'navbar-brand' %>
            </li>
          <% else %>
            <li class="navbar-brand">
              <%= link_to 'Sign In', new_user_session_path, class: 'navbar-brand' %>
            </li>
            <li class="navbar-brand">
              <%= link_to 'Sign Up', new_user_registration_path, class: 'navbar-brand' %>
            </li>
          <% end %>
        </div>
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        
          
      </nav>
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
    <div class="footer">
      <ul class="navbar-brand">
        <% if user_signed_in? %>
          <b>Want to Teach?</b>
            <%= link_to 'Teach A New Course', new_instructor_course_path, class: 'navbar-brand' %>
        <% else %>
          <b>Want to Teach?</b>
          <%= link_to 'Sign In', new_user_session_path, class: 'navbar-brand' %>
        <% end %>
      </ul>
    </div>
    
    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
